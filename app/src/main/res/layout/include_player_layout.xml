<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/VerticalLinearLayoutTheme"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/imagePanelMusic"
        android:layout_width="match_parent"
        android:layout_height="350sp"
        android:contentDescription="@string/panel_music_image" />

    <TextView
        android:id="@+id/textViewSongName"
        style="@style/TextViewPlayerLayoutTheme"
        android:layout_marginTop="@dimen/marginFifteen"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textViewArtists"
        style="@style/TextViewPlayerLayoutTheme"
        android:layout_marginTop="@dimen/marginEight"
        android:textSize="17sp" />

    <LinearLayout style="@style/LinearLayoutPlayerButtonsTheme">

        <Button
            android:id="@+id/buttonPrevious"
            style="@style/ButtonNextPreviousPlayerTheme"
            android:background="@drawable/ic_skip_previous_black_24dp"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/buttonPlay"
            style="@style/ButtonPlayPlayerTheme"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/buttonNext"
            style="@style/ButtonNextPreviousPlayerTheme"
            android:background="@drawable/ic_skip_next_black_24dp"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

    <LinearLayout style="@style/LinearLayoutPlayerVolumeTheme">

        <ImageView
            style="@style/ImageVolumePlayerTheme"
            android:contentDescription="@string/volume_mute"
            android:src="@drawable/ic_volume_mute_black_24dp" />

        <SeekBar
            android:id="@+id/volumeBar"
            style="@style/SeekBarVolumePlayerTheme" />

        <ImageView
            style="@style/ImageVolumePlayerTheme"
            android:contentDescription="@string/volume_up"
            android:src="@drawable/ic_volume_up_black_24dp" />
    </LinearLayout>

</LinearLayout>